{
  "name": "vite-static-renderer",
  "version": "1.0.0",
  "description": "A performant static site generator with CLI and Vite integration",
  "author": "Yogesh Bhandari <develop.yogesh@gmail.com>",
  "license": "Apache License 2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/afrankenstine/vite-static-renderer.git"
  },
  "homepage": "https://github.com/afrankenstine/vite-static-renderer",
  "bugs": {
    "url": "https://github.com/afrankenstine/vite-static-renderer/issues"
  },
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "vite-static": "dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./vite": {
      "import": "./dist/vite.js",
      "types": "./dist/vite.d.ts"
    }
  },
  "files": [
    "dist",
    "bin",
    "templates"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "chalk": "^5.6.0",
    "commander": "^14.0.0",
    "fastify": "^5.5.0",
    "glob": "^11.0.3",
    "mime-types": "^3.0.1",
    "playwright": "^1.55.0",
    "tslib": "^2.8.1",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^24.3.0",
    "rollup": "^4.49.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.3"
  },
  "peerDependencies": {
    "vite": ">=4.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "static-site-generator",
    "prerender",
    "vite",
    "cli",
    "ssg"
  ]
}
